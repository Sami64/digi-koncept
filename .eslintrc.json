{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["airbnb-base"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"import/no-restricted-paths": [
			"error",
			{
				"zones": [
					{
						"target": "./src/core",
						"from": "./src/components"
					},
					{
						"target": "./src/core",
						"from": "./src/modules"
					},
					{
						"target": "./src/core",
						"from": "./src/pages"
					},
					{
						"target": "./src/modules",
						"from": "./src/pages"
					},
					{
						"target": "./src/components",
						"from": "./src/pages"
					}
				]
			}
		]
	}
}
